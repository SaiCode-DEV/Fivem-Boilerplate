{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "lib": ["es2022", "dom", "dom.iterable"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "strictFunctionTypes": true,
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./web/src/*"],
      "~/*": ["./*"],
      "@common/*": ["./src/common/*"]
    },
    "types": ["@types/node"]
  },
  "include": ["./src", "./web"]
}
